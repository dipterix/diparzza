<div class="align-center">
<h6 class="separator">New Announcement</h6>

<%= form_for(@classannounce) do |f| %>
  <% if @classannounce.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@classannounce.errors.count, "error") %> prohibited this classannounce from being saved:</h2>

      <ul>
      <% @classannounce.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field hidden">
    <%= f.label :user_id %><br>
    <%= f.number_field :user_id, value: current_user.id, disabled: true %>
  </div>
  <div class="field hidden">
    <%= f.label :classroom_id %><br>
    <%= f.number_field :classroom_id, value: @classroom.id %>
  </div>
  <div class="field">
    <%= f.text_area :content, class: "course-default-textarea form-control" %>
  </div>
  <div class="actions">
    <%= f.submit "Make it Announced!", class: "btn btn-primary top-mg-10" %>
  </div>
<% end %>


</div>
